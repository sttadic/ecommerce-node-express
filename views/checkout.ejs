<%- include("includes/head.ejs") %>
    <link rel="stylesheet" href="/css/checkout.css">
    </head>

    <body>
        <!-- Block displaying cart information and go back button/link -->
        <div class="container text-center subtotal">
            <a href="/products" class="go-back">⇦ Go Bask</a>

            <h4 class="items-qty">Number of items in the cart: <%= totalQty %>
            </h4>

            <h3>SUBTOTAL: €<%= subtotal.toFixed(2) %>
            </h3>
        </div>

        <!-- Bogus payment form -->
        <div class="container text-center payment-info">
            <div class="row">
                <div class="col-lg-12">
                    Please note that this is a bogus form, no personal details are being stored. There is no need to
                    fill any of the fields, just select 'Pay Now' button below to make a transaction and store purchased
                    products to the database for a logged in user.
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    Customer Details:
                </div>
                <div class="col-lg-6">
                    <input type="text" id="first-name" placeholder="First Name">
                </div>
                <div class="col-lg-6">
                    <input type="text" id="last-name" placeholder="Last Name">
                </div>
                <div class="col-lg-12">
                    <input type="email" id="email-address" placeholder="Email">
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    Address:
                </div>
                <div class="col-lg-12">
                    <input type="text" id="street" placeholder="Street">
                </div>
                <div class="col-lg-12">
                    <input type="text" id="city" placeholder="Town/City">
                </div>
                <div class="col-lg-12">
                    <input type="text" id="county" placeholder="County">
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    Card Details:
                </div>
                <div class="col-lg-12">
                    <input type="text" id="card-number" placeholder="Card Number">
                </div>
                <div class="col-lg-6">
                    <input type="text" id="expiry" placeholder="Expiry Date">
                </div>
                <div class="col-lg-6">
                    <input type="text" id="cvv" placeholder="CVV">
                </div>
                <div class="col-lg-12 pay-now">
                    <form action="/payment" method="POST">
                        <button type="submit" class="btn-pay">Pay Now</button>
                    </form>
                </div>
            </div>

        </div>
    </body>

    </html>